<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/about_fragment_header"
            android:background="@color/husky_purple"
            android:textColor="@color/husky_gold"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:fontFamily="@font/hammersmith_one"
            android:gravity="center"
            android:text="@string/about_header"
            android:textSize="24sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="568dp"
            android:layout_margin="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="165dp"
                    android:src="@mipmap/css_compass_logo" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp" />

                <TextView
                    android:id="@+id/about_fragment_body"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/hammersmith_one"
                    android:padding="16dp"
                    android:text="@string/about_info"
                    android:textAlignment="center"
                    android:textColor="@color/husky_purple"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />

                <TextView
                    android:id="@+id/about_fragment_contact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/hammersmith_one"
                    android:text="@string/contact_info"
                    android:textAlignment="center"
                    android:textColor="@color/husky_purple"
                    android:textSize="16sp" />
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>