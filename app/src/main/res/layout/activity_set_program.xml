<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetProgramActivity">

    <TextView
        android:id="@+id/set_header"
        android:layout_width="285dp"
        android:layout_height="41dp"
        android:text="@string/set_header"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/set_body"
        android:layout_width="381dp"
        android:layout_height="188dp"
        android:layout_marginTop="24dp"
        android:text="@string/set_program_body"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_header"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TextSizeCheck" />

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="252dp"
        android:layout_height="158dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_body"
        app:layout_constraintVertical_bias="0.471"
        tools:ignore="TextSizeCheck">

        <Button
            android:id="@+id/homepage_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/set_button_text" />

        <Button
            android:id="@+id/student_res_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/student_res_text" />

        <Button
            android:id="@+id/career_dev_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/career_dev_text" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>