<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResourceFragment">

    <TextView
        android:id="@+id/resource_fragment_header"
        android:background="@color/husky_purple"
        android:textColor="@color/husky_gold"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:fontFamily="@font/hammersmith_one"
        android:gravity="center"
        android:text="@string/resources_text"
        android:textSize="24sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="644dp"
            android:layout_margin="25dp"
            android:translationY="62dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pantry"
                    android:textColor="@color/husky_purple"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/hammersmith_one"
                    android:text="@string/pantry_text"
                    android:textAlignment="viewStart"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/pantry_body"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/hammersmith_one"
                    android:text="@string/placeholder"
                    android:textAlignment="viewStart"
                    android:textSize="14sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <TextView
                    android:id="@+id/dubnet"
                    android:textColor="@color/husky_purple"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/hammersmith_one"
                    android:text="@string/dubnet_text"
                    android:textAlignment="viewStart"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/dubnet_body"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/hammersmith_one"
                    android:text="@string/placeholder"
                    android:textAlignment="viewStart"
                    android:textSize="14sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <TextView
                    android:id="@+id/parking"
                    android:textColor="@color/husky_purple"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/hammersmith_one"
                    android:text="@string/parking_text"
                    android:textAlignment="viewStart"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/parking_body"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/hammersmith_one"
                    android:text="@string/placeholder"
                    android:textAlignment="viewStart"
                    android:textSize="14sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

            </LinearLayout>

        </ScrollView>

</FrameLayout>